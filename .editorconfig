# Editor Config : http://editorconfig.org
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.rb]
indent_style = space
indent_size = 2

[*.haml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 4

[Gemfile]
indent_style = space
indent_size = 2
