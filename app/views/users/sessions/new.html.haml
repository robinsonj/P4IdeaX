%div
  .main.panel.section
    .header
      %h2 Sign in
    .body
      .group
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group.inline
            = f.label :email
            = f.email_field :email, autofocus: true, :class => "input-text big"
          .form-group.inline
            = f.label :password
            = f.password_field :password, autocomplete: "off", :class => "input-text big"
          - if devise_mapping.rememberable?
            .form-group.inline
              = f.check_box :remember_me
              = f.label :remember_me
          .form-submit.inline
            = f.submit "Sign in", :id => "submit-signup", :class => "input-submit"
        = render "users/shared/links"
