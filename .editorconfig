# Editor Config : http://editorconfig.org
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true

[*.rb]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf

[*.haml]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf

[Gemfile]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
